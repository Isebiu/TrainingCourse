@page
@model Training.Pages.Customer.Cart.IndexModel
<form method="post">
    <br />
    <div class="card shadow border-0">
        <div class="card-header bg-dark bg-gradient text-light ml-0 py-4">
            <div class="row px-4">
                <div class="col-6">
                    <h5 class="pt-2 text-white">
                        Shopping Cart
                    </h5>
                </div>

            </div>
        </div>
        <div class="card-body my-4">
            <div class="row mb-3 pb-3">
                <div class="col-md-2 offset-md-1">
                    <a href="./Home/Index" class="btn btn-outline-primary text-uppercase mb-5 btn-sm"><small>Continue Shopping</small></a>
                </div>

            </div>
            @foreach (var item in Model.ShoppingCartList)
            {
                <div class="row">
                    <div class="col-md-10 offset-md-1">

                        <div class="row border-bottom pb-3">
                            <div class="d-sm-block d-lg-block col-lg-1 text-center py-2">
                                <img src="@item.MenuItem.Image" class="rounded" width="100%" />
                            </div>
                            <div class="col-12 col-lg-6 pt-md-3">
                                <h5 class="text-uppercase"><strong>@item.MenuItem.Name</strong></h5>
                                <p><small>@Html.Raw(item.MenuItem.Description)</small></p>
                            </div>
                            <div class="col-12  col-lg-5 text-center row">
                                <div class="col-3 text-md-right pt-2 pt-md-4">
                                    <h6 class="fw-semibold">
                                        Price @item.MenuItem.Price $

                                        <span class="text-muted"> &nbsp;x&nbsp;</span>@item.Count
                                    </h6>
                                </div>
                                <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                    @* butoanele de increment si decrement count  *@
                                    <div class="w-75 btn-group" role="group">
                                        <button type="submit" class="btn btn-outline-dark bg-gradient py-2" asp-page-handler="plus" asp-route-cartId="@item.Id">
                                            <i class="bi bi-plus-square"></i>
                                        </button> &nbsp;
                                        <button type="submit" class="btn btn-outline-danger bg-gradient py-2" asp-page-handler="minus" asp-route-cartId="@item.Id">
                                            <i class="bi bi-dash-square"></i>
                                        </button>
                                    </div>
                                </div>
                                @* butonul de delete *@
                                <div class="col-3 col-sm-4 col-lg-2 offset-lg-1 text-right pt-2">
                                    <button type="submit" class="btn btn-danger bg-gradient py-2 " asp-page-handler="remove" asp-route-cartId="@item.Id">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                    @* <a href="#" class="btn btn-danger bg-gradient py-2 "> *@
                                    @*     <i class="bi bi-trash-fill"></i> *@
                                    @* </a> *@
                                </div>
                            </div>

                        </div>



                    </div>
          
                </div>
            }
            <div class="card-footer bg-white border-0">
                <div class="row">
                    <div class="col-md-4 offset-md-4">
                        <ul class="list-group mb-4">
                            <li class="d-flex justify-content-between align-items-center">
                                <h5 class="text-dark fw-semibold text-uppercase"> Total (USD)</h5>
                                <h4 class="text-dark fw-bolder">@Model.TotalPrice $</h4>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 offset-md-5">
                        <a asp-page="summary" class="btn btn-primary border-0 bg-gradient w-100 py-2">Summary</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
