@page
@model Training.Pages.Admin.Categories.IndexModel




<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-dark">Category List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-dark">
                Create new Category
            </a>
        </div>

    </div>
    <table class="table table-bordered table-striped">
        <thead>

            <tr>
                <th>
                    Category name
                </th>

                <th>
                    Desplay Order
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.Categories.OrderBy(u => u.Order))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Order</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="edit" asp-route-id="@obj.Id" class="btn btn-outline-dark mx-2">
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>
                            <a asp-page="/Categories/Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>
                                Delete
                            </a>
                        </div>
                    </td>


                </tr>
            }
        </tbody>
    </table>

</div>
