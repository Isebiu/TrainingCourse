@page
@model Training.Pages.Admin.FoodTypes.IndexModel

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-dark">Food Types List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-dark">
                Create new Food Type
            </a>
        </div>

    </div>
    <table class="table table-bordered table-striped">
        <thead>

            <tr>
                <th>
                    Category name
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.FoodTypes.OrderBy(u => u.Id))
            {
                <tr>

                    <td>@obj.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="edit" asp-route-id="@obj.Id" class="btn btn-outline-dark mx-2">
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>
                            <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>
                                Delete
                            </a>
                        </div>
                    </td>


                </tr>
            }
        </tbody>
    </table>

</div>
